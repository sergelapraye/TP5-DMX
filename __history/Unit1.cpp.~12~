//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop
#include "include/DasHard.h.h"
//#include "include/DasHard2006.dll"
#include "Unit2.h"
#include "Unit1.h"

//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
	g_dasusbdll=LoadLibrary(L"DasHard2006.dll");
	if(g_dasusbdll)
	{
		DasUsbCommand=(DASHARDCOMMAND)::GetProcAddress((HMODULE)g_dasusbdll,"DasUsbCommand");
	}
	interface_open=DasUsbCommand(DHC_INIT,0,NULL);
	DasUsbCommand(DHC_OPEN,0,0);

	lblResultOpenDMX->Caption=interface_open;
	for (int i = 0; i < 512; i++) {
		dmxBlock[i]=0;
	}
	dmxBlock[0]=0xFF;
	dmxBlock[1]=0xFF;
	dmxBlock[2]=0xFF;
	dmxBlock[3]=0xFF;
	dmxBlock[4]=0xFF;
	dmxBlock[5]=0xFF;

}

//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	CouleurR=0;
	CouleurG=0;
	CouleurB=0;
	CouleurW=0;
	Timer2->Enabled=true;
}
//---------------------------------------------------------------------------
 void __fastcall TForm1::SendTrame()
 {
	if(interface_open>0)
	{

		try{

			DasUsbCommand(DHC_DMXOUT,DMX_MAXCHANNEL,dmxBlock);
		}
		catch(int x)
		{
		}
	}

 }
 void __fastcall TForm1::FormClose(TObject*Sender,TCloseAction&Action)
 {
 //FermetureduDMX�l'arretduprogramme
	if(interface_open>0)
	{
		DasUsbCommand(DHC_CLOSE,0,0);
		DasUsbCommand(DHC_EXIT,0,NULL);
	}
	if(g_dasusbdll!=NULL)
	FreeLibrary(g_dasusbdll);
 }
//---------------------------------------------------------------------------
void __fastcall TForm1::ScrollBar2Change(TObject *Sender)
{
   CouleurB = ScrollBar2->Position;
   Edit3->Text = CouleurB;
   dmxBlock[2]= CouleurB;

}
//---------------------------------------------------------------------------
void __fastcall TForm1::ScrollBar4Change(TObject *Sender)
{
	CouleurG = ScrollBar4->Position;
	Edit4->Text = CouleurG;
	dmxBlock[1]= CouleurG;

}
//---------------------------------------------------------------------------
void __fastcall TForm1::ScrollBar3Change(TObject *Sender)
{
   CouleurW = ScrollBar3->Position;
   Edit2->Text = CouleurW;
   dmxBlock[3] = CouleurW;

}
//---------------------------------------------------------------------------
void __fastcall TForm1::ScrollBar1Change(TObject *Sender)
{
	CouleurR = ScrollBar1->Position;
	Edit1->Text = CouleurR;
	dmxBlock[0]=CouleurR;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Timer1Timer(TObject *Sender)
{
	SendTrame();
}
//---------------------------------------------------------------------------



void __fastcall TForm1::Timer2Timer(TObject *Sender)
{
		CouleurR++;
		CouleurG++;
		CouleurB++;
		CouleurW++;
		Edit2->Text = CouleurW;
		Edit3->Text = CouleurB;
		Edit4->Text = CouleurG;
		Edit1->Text = CouleurR;
		if (CouleurR==255) {
			Timer2->Enabled=false;
		}
}
//---------------------------------------------------------------------------

